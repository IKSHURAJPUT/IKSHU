<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"/>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifImageView"
        android:layout_width="1080px"
        android:layout_height="1920px"
        android:background="@drawable/b"
        android:visibility="visible" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifview"
        android:layout_width="1080px"
        android:layout_height="500px"
        android:layout_marginTop="740px"
        android:src="@drawable/q"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/imageButton"
        style="@android:style/Widget.ImageButton"
        android:layout_width="180dp"
        android:layout_height="185dp"
        android:scaleType="fitStart"
        app:srcCompat="@drawable/pc"
        app:layout_constraintCircle="@+id/gifview"
        app:layout_constraintCircleAngle="337"
        app:layout_constraintCircleRadius="710px"/>

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="180dp"
        android:layout_height="185dp"
        android:scaleType="fitStart"
        app:layout_constraintCircle="@+id/gifview"
        app:layout_constraintCircleAngle="382"
        app:layout_constraintCircleRadius="710px"
        app:srcCompat="@drawable/l"
        />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="359dp"
        android:layout_height="163dp"
        android:scaleType="fitXY"
        app:layout_constraintCircle="@+id/gifview"
        app:layout_constraintCircleAngle="540"
        app:layout_constraintCircleRadius="450px"
        app:srcCompat="@drawable/m"
        />


</android.support.constraint.ConstraintLayout>